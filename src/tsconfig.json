{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": [
      "hammerjs",
      "node",
      "modernizr",
      "stacktrace-js"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "test.ts",
    "electron.js",
    "**/*.spec.ts",
    "server.js",
    "server",
    "electron",
    "service-worker",
    "node_modules",
    "manifest.json",
    "ie-polyfills.js"
  ]
}
