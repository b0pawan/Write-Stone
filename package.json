{
  "name": "write-stone-recorder-app",
  "description": "Write Stone Desktop App",
  "version": "1.0.0",
  "author": "Pawan",
  "license": "BSD",
  "keywords": [
    "Electron",
    "DesktopCapture",
    "WebRTC"
  ],
  "scripts": {
    "build-mac": "node --max-old-space-size=4096 node_modules/electron-packager ./src WriteStoneRecorderApp  --platform=darwin --arch=x64 --version=0.36.0 --icon=src/Icon.icns",
    "build-win32": "node --max-old-space-size=4096 node_modules/electron-packager ./src WriteStoneRecorderApp --overwrite --asar=true --platform=win32 --arch=ia32 --icon=src/Icon.icns --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electron Recorder App\"",
    "build-linux": "node --max-old-space-size=4096 node_modules/electron-packager ./src WriteStoneRecorderApp --overwrite --asar=true --platform=linux --arch=x64 --icon=src/Icon.icns --prune=true --out=release-builds",
    "start": "electron ."
  },
  "main": "src/main.js",
  "bin": {
    "write-stone-recorder-app": "./launch.js"
  },
  "devDependencies": {
    "electron-packager": "~10.1.0"
  },
  "dependencies": {
    "domify": "~1.4.0",
    "electron": "~1.7.10",
    "electron-winstaller": "^2.6.3",
    "electron-installer-dmg": "^0.2.1",
    "ffmpeg-static" : "^2.1.0"
  }
}
